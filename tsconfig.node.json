{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@features/*": ["src/main/features/*"],
      "@handlers/*": ["src/main/features/handlers/*"],
      "@services/*": ["src/main/features/services/*"],
      "@main/*": ["src/main/*"]
    }
  }
}
